<Window x:Class="UITest.TalkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UITest"
        mc:Ignorable="d"
        Title="TalkWindow" Height="498" Width="500" WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Grid x:Name="myGrid">
        <Image x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Stretch="None" Width="500" Height="500" MouseUp="image_MouseUp"/>
    </Grid>
</Window>
