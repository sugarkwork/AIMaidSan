<Window x:Class="AIMaidSan.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIMaidSan"
        mc:Ignorable="d"
        Title="AIMaidSan ChoiceWindow" Height="450" Width="800" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Loaded="Window_Loaded">
    <Grid>
        <Border Background="White" CornerRadius="25" BorderBrush="Gray" BorderThickness="1" Grid.RowSpan="2">
            <Grid>
                <Button Content="X" VerticalAlignment="Top" HorizontalAlignment="Right" Click="OnCloseClicked" Margin="0,10,10,0" BorderBrush="{x:Null}" Background="{x:Null}" Panel.ZIndex="2"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Panel.ZIndex="1" Margin="0,50,0,0">
                    <StackPanel x:Name="buttonStackPanel" Orientation="Vertical" Margin="10">
                        <!-- ボタンは動的にここに追加される -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
